@using BitirmeProjesi.Models.Sınıflar
@using PagedList
@using PagedList.Mvc
@model  IPagedList<TYTGeoKonulari>
@{
    ViewBag.Title = "TYTGeoKonuGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<title>TYT Geometri Konuları</title>
<div style="background-color: white; border-radius: 5px; margin-top: 30px; margin-left:40px; margin-right:40px ">
    <p style="text-align: center; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans- serif; font-size: 20px; color: #8789FF;margin-top:14px; ">
        TYT Geometri Konuları
    </p>
</div>
<link rel="stylesheet" href="~/Web2/" />
<link rel="stylesheet" href="~/Web2/assets/vendor/css/core.css" class="template-customizer-core-css" />
<link rel="stylesheet" href="~/Web2/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
<link rel="stylesheet" href="~/Web2/assets/css/demo.css" />
<link rel="stylesheet" href="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

<div style="margin-top:30px; margin-right:80px;">
    <table class="table" style="text-align: center; margin-right:50px;margin-left:40px;">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Konular</th>
                <th>Durum</th>
                <th>Tarih</th>
                <th>Değiştir</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var x in Model)
            {
                <tr>


                    @if (x.Durum == false)
                    {
                        <td style="background-color: #FFD8D2 ">@x.ID</td>
                        <td style="background-color: #FFD8D2 ">@x.Konular</td>
                        <td style="background-color: #FFD8D2 ">Bitmedi</td>
                        <td style="background-color: #FFD8D2 ">@x.Tarih</td>
                        <td style="background-color: #FFD8D2 ">
                            <a class="btn rounded-pill btn-outline-success" style="width: 100px; height: 40px; " href="/Konular/TYTGeoKonuBitti/@x.ID">Bitti</a>
                            <a class="btn rounded-pill btn-outline-danger" style="width: 100px; height: 40px; " href="/Konular/TYTGeoKonuBitmedi/@x.ID">Bitmedi</a>
                        </td>
                    }
                    else
                    {
                        <td style="background-color: #E3F8D7 ">@x.ID</td>
                        <td style="background-color: #E3F8D7 ">@x.Konular</td>
                        <td style="background-color: #E3F8D7 ">Bitti</td>
                        <td style="background-color: #E3F8D7 ">@x.Tarih</td>
                        <td style="background-color: #E3F8D7 ">
                            <a class="btn rounded-pill btn-outline-success" style="width:100px; height:40px;" href="/Konular/TYTGeoKonuKonuBitti/@x.ID">Bitti</a>
                            <a class="btn rounded-pill btn-outline-danger" style="width:100px; height:40px;" href="/Konular/TYTGeoKonuBitmedi/@x.ID">Bitmedi</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<nav aria-label="Page navigation" style="margin-left:40px;">
    <ul class="pagination">
        <li class="page-item">
            @Html.PagedListPager(Model, i => Url.Action("TYTGeoKonuGetir", new { i, }), new PagedListRenderOptions
{
    LiElementClasses = new List<string> { "page-link" }
})
        </li>
    </ul>
</nav>





